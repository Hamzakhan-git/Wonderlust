<% layout("/layouts/boilerplate") %>

<style>
  .filters-container {
    position: relative;
    padding: 15px;
    background: white;
    border-bottom: 1px solid #ddd;
  }
  
  #filters {
    display: flex;
    overflow-x: auto;
    scrollbar-width: none;
    padding-bottom: 10px;
    -ms-overflow-style: none;
  }
  
  #filters::-webkit-scrollbar {
    display: none;
  }
  
  .filter {
    text-align: center;
    margin-right: 1.5rem;
    min-width: 70px;
    flex-shrink: 0;
    opacity: 0.7;
  }
  
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  
  .filter div i {
    font-size: 24px;
    margin-bottom: 5px;
    color: #717171;
  }
  
  .filter p {
    font-size: 0.75rem;
    color: #222;
    font-weight: 500;
    margin: 0;
  }
  
  .tax-toggle {
    position: sticky;
    right: 0;
    background: white;
    padding-left: 15px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    z-index: 10;
  }
  
  .tax-toggle-mobile {
    border: 1px solid #ddd;
    border-radius: 20px;
    height: 36px;
    padding: 0 12px;
    display: flex;
    align-items: center;
    background: white;
    font-size: 0.8rem;
    font-weight: 500;
    white-space: nowrap;
  }
  
  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 20px 15px 15px;
    color: #222;
  }
  
  .listing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 25px;
    padding: 0 15px 20px;
  }
  
  /* Responsive adjustments */
  @media (min-width: 768px) {
    .tax-toggle-mobile {
      display: none;
    }
    
    #filters {
      flex-wrap: wrap;
      overflow-x: visible;
    }
    
    .filter {
      margin-right: 2rem;
      margin-top: 1rem;
    }
    
    .tax-toggle {
      position: static;
      padding-left: 2rem;
    }
  }
  
  @media (max-width: 767px) {
    .desktop-tax {
      display: none;
    }
  }
</style>

