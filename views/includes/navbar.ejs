<style>
  .navbar {
    padding: 0.8rem 1.5rem;
  }

  .navbar-brand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
  }

  .navbar-brand i {
    font-size: 1.4rem;
  }

  .navbar-brand span {
    font-size: 1.1rem;
  }

  .search-bar {
    flex: 1;
    max-width: 500px;
    margin: 0 2rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    width: 100%;
    font-size: 0.95rem;
  }

  .search-btn {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    margin-left: 0.5rem;
    white-space: nowrap;
  }

  .navbar-nav {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .search-bar-desktop {
      display: none;
    }
    .navbar-collapse {
    background-color: rgba(255, 255, 255, 0.95);
    padding: 1rem;
    border-radius: 0 0 10px 10px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  .navbar-collapse .nav-link {
    padding: 0.5rem 1rem;
    color: #333;
  }

  .navbar-collapse .form-control,
  .navbar-collapse .btn {
    width: 100%;
  }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap">

    <!-- Logo + Explore -->
    <a href="/listings" class="navbar-brand">
      <i class="fa-regular fa-compass text-danger"></i>
      <span>Explore</span>
    </a>

    <!-- Search Bar (Desktop only) -->
    <div class="search-bar search-bar-desktop d-none d-md-block">
      <form action="/listings/search" method="GET" class="d-flex align-items-center">
        <input class="form-control search-inp" type="search" name="q" placeholder="Search destination" required />
        <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
    </div>

    <!-- Hamburger Toggle -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible Nav -->
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item d-md-none">
          <!-- Search Bar inside hamburger menu for mobile -->
          <form action="/listings/search" method="GET" class="d-flex align-items-center my-2 px-2">
            <input class="form-control search-inp" type="search" name="q" placeholder="Search destination" required />
            <button class="btn search-btn ms-2" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </form>
        </li>
        <li class="nav-item"><a class="nav-link" href="/listings/new">Airbnb your home</a></li>
        <% if (!currUser) { %>
          <li class="nav-item"><a class="nav-link" href="/signup"><b>Sign Up</b></a></li>
          <li class="nav-item"><a class="nav-link" href="/login"><b>Login</b></a></li>
        <% } else { %>
          <li class="nav-item"><a class="nav-link" href="/logout"><b>Log Out</b></a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
