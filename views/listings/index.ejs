<% layout("/layouts/boilerplate") %>

<style>
  /* Slideable Filter Bar */
  #filters {
    display: flex;
    overflow-x: auto;
    white-space: nowrap;
    padding: 1rem;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE/Edge */
    background-color: #fff;
    align-items: center;
  }

  #filters::-webkit-scrollbar {
    display: none; /* Chrome, Safari */
  }

  .filter {
    display: inline-block;
    text-align: center;
    margin: 0 1rem;
    opacity: 0.7;
    transition: opacity 0.2s ease;
    flex: 0 0 auto;
  }

  .filter i {
    font-size: 1.2rem;
    margin-bottom: 0.3rem;
  }

  .filter p {
    font-size: 0.8rem;
    margin: 0;
  }

  .filter:active {
    opacity: 0.4;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  /* Tax toggle aligned in same line */
  .tax-toggle {
    display: flex;
    align-items: center;
    margin-left: auto;
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 0.5rem 1rem;
    white-space: nowrap;
    flex-shrink: 0;
    margin-right: 1rem;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    #filters {
      padding: 0.5rem;
    }

    .filter {
      margin: 0 0.5rem;
    }

    .filter i {
      font-size: 1rem;
    }

    .filter p {
      font-size: 0.7rem;
    }

    .tax-toggle {
      padding: 0.25rem 0.75rem;
      font-size: 0.8rem;
      height: auto;
      margin-left: 0.5rem;
    }
  }
</style>


