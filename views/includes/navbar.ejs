<style>
  .search-bar {
    flex-grow: 1;
    max-width: 500px;
    margin: 0 1rem;
  }

  .search-bar form {
    display: flex;
    align-items: center;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    flex-grow: 1;
    font-size: 0.95rem;
  }

  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1rem;
    margin-left: 0.5rem;
    white-space: nowrap;
  }

  .search-btn:hover {
    background-color: #fe424d;
  }

  @media (max-width: 768px) {
    .search-bar {
      order: 3;
      width: 100%;
      margin: 1rem 0;
    }

    .navbar-collapse.show {
      background-color: rgba(255, 255, 255, 0.95);
      border-radius: 0.5rem;
      padding: 1rem;
    }

    .search-btn {
      font-size: 0.85rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap">

    <!-- Brand logo -->
    <a href="/listings" class="navbar-brand"><i class="fa-regular fa-compass"></i></a>

    <!-- Search bar (centered in navbar) -->
    <div class="search-bar d-none d-md-block">
      <form role="search" action="/listings/search" method="GET">
        <input class="form-control search-inp" type="search" name="q" placeholder="Search destination" required />
        <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
      </form>
    </div>

    <!-- Hamburger menu -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse w-100" id="navbarNavAltMarkup">
      <!-- Search in mobile view -->
      <div class="search-bar d-md-none">
        <form role="search" action="/listings/search" method="GET">
          <input class="form-control search-inp" type="search" name="q" placeholder="Search destination" required />
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
        </form>
      </div>

      <!-- Nav links -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Right side -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <% if (currUser) { %>
          <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
